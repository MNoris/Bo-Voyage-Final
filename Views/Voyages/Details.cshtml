@model Bo_Voyage_Final.Models.Voyage

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Voyage</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateDepart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateDepart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateRetour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRetour)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlacesDispo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlacesDispo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrixHt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrixHt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reduction)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reduction)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descriptif)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descriptif)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdDestinationNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdDestinationNavigation.Nom)
        </dd>
    </dl>
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var item in Model.IdDestinationNavigation.Photo)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@(item.NomFichier)" alt="First slide">
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

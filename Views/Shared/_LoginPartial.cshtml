                <div class="dropdown-menu">
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Client</a>
                    <a class="dropdown-item" asp-area="BackOffice" asp-controller="Home" asp-action="Index">Administrateur</a>
                </div>
            </li>*@

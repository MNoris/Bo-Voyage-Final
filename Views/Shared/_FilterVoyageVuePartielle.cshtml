
@model IEnumerable<Bo_Voyage_Final.Models.Voyage>

<div class="bg-light">
    <h1 class="text-center ">Recherche Avancée</h1>
    <form asp-controller="Voyages" asp-action="Index" method="get">

        <div class="form-row">
            <div class="form-group col-md-4 d-flex flex-column">
                <label>Selectionnez un Continent</label>
                <select name="idCont"
                        asp-items="@(new SelectList( ViewBag.Continent,"Id","Nom",ViewData["IdCont"]))">
                    <option selected value="0">Continents</option>
                </select>
            </div>

            @if (ViewBag.IdCont != 0)
            {

                <div class="form-group col-md-4 d-flex flex-column">
                    <label>Selectionnez un Pays</label>
                    <select name="idPays"
                            asp-items="@(new SelectList( ViewBag.Pays,"Id","Nom",ViewData["IdPays"]))">
                        <option selected value="0">Pays</option>
                    </select>
                </div>
                if (ViewBag.IdPays != 0)
                {

                    <div class="form-group col-md-4 d-flex flex-column">
                        <label>Selectionnez une région</label>
                        <select name="idRegion"
                                asp-items="@(new SelectList( ViewBag.Region,"Id","Nom",ViewData["IdRegion"]))">
                            <option selected value="0">Régions</option>
                        </select>
                    </div>

                }
            }
        </div>
        <div class="form-row ">
            <div class="form-group col-md-2 d-flex flex-column">
                <label>Prix Minimal</label>
                <input type="number" name="minPrice" min=0 value="@ViewBag.MinPrice" step="50">
            </div>
            <div class="form-group col-md-2 d-flex flex-column">
                <label>Prix Maximal</label>
                <input type="number" name="maxPrice" min=0 value="@ViewBag.MaxPrice" step="50">
            </div>
        </div>
        <div>
            <div class="form-row ">
                <div class="form-group col-md-3 d-flex flex-column">
                    <label>Date minimale de départ</label>
                    <input type="date" name="dateMin" value="@ViewBag.dateMin" id="inlineFormInputName2">
                </div>
                <div class="form-group col-md-3 d-flex flex-column ">
                    <label>Date maximale de départ</label>
                    <input type="date" name="dateMax" value="@ViewBag.dateMax"  id="inlineFormInputName2">
                </div>
            </div>
        </div>

        <div class=" input-group-btn">
            <input class="btn btn-primary" type="submit" value="Filtrer" />

        </div>

    </form>

</div>

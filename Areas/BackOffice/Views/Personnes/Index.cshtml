@model IEnumerable<Bo_Voyage_Final.Models.Personne>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<form asp-controller="Personnes" asp-action="Index" method="get">
    <p>
        <label>ID</label>
        <input type="number" name="idClient" value="@ViewBag.IdClient">
        <label>Nom</label>
        <input type="text" name="search" value="@ViewBag.Search">
        <label>Age</label>
        <input type="number" name="age" value="@ViewBag.Age">
        <label>Sexe</label>
        <select name="sexe" asp-items="ViewBag.Sexes"></select>

        <input type="submit" value="Filter" />
    </p>
</form>





<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Civilite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datenaissance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Civilite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datenaissance)
            </td>
   @*         <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td> *@
        </tr>
}
    </tbody>
</table>
